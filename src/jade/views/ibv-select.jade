
.select

	.select-container

		.select-label
			span(ng-bind="label")

		.select-toggler
			span.icon-caret

		.select-drop
			.select-items
				.select-item(
					ng-repeat="option in options"
					ng-class="{'is-selected': getOptionSelected(option)}"
					ng-click="selectVal(option, $index)"
					)
					span(ng-bind="getOptionKey(option)")



.clearfix
	zoom 1

	&:after
	&:before
		content ''
		display table

	&:after
		clear both


.t-just
	text-align justify


.t-left
	text-align left


.t-right
	text-align right


.t-center
	text-align center


.t-top
	vertical-align top


.t-mid
	vertical-align middle


.t-base
	vertical-align baseline


.t-bottom
	vertical-align bottom


.full-w
	width 100%


.full-h
	height 100%


.full-size
	width 100%
	height 100%
	top 0
	left 0


.blocky
	width 100%
	display block


.inliney
	display inline-block


.nowrap
	white-space nowrap


.clickable
	cursor pointer


.mailto
	unicode-bidi bidi-override
	direction rtl


.truncated
	white-space nowrap
	overflow hidden
	text-overflow ellipsis

@import 'sprite-png/common'


@keyframes front
	0%
		transform rotateY(0deg)
	100%
		transform rotateY(359deg)

@keyframes back
	0%
		transform rotateY(180deg)
	100%
		transform rotateY(539deg)

		
body
	margin 0
	background url('/img/bg/bg.png')

.demo
	position absolute
	transform-style preserve-3d
	perspective 200
	width 100%
	height 100%
	top 0
	left 0

	i
	img
		display block
		position absolute
		top 50%
		left 50%
		margin-top -85px
		margin-left -75px
		display block
		backface-visibility hidden

	& > *:first-child
		z-index 1
		animation front 2.5s ease infinite

	& > *:last-child
		z-index 2
		animation back 2.5s ease infinite
